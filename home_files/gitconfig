[color]
    ui = auto

[color "diff"]
    meta = yellow
    frag = magenta
    old = red
    new = green
    whitespace = red reverse

[color "status"]
    added = green
    changed = yellow
    untracked = cyan

[alias]
    lg = log --graph --decorate --pretty=oneline --abbrev-commit
    lga = log -n30 --graph --decorate --pretty=oneline --abbrev-commit --all
    stat = status
    st = status

