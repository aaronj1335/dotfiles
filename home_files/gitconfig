[color]
    ui = auto

[color "diff"]
    meta = yellow
    frag = magenta bold
    old = red bold
    new = green bold
    whitespace = red reverse
    commit = yellow bold

[color "diff-highlight"]
    oldNormal = red bold
    oldHighlight = red bold 52
    newNormal = green bold
    newHighlight = green bold 22

[color "status"]
    added = green
    changed = yellow
    untracked = cyan

[alias]
    lg = log --graph --decorate --pretty=oneline --abbrev-commit
    lga = !git status -sb && echo "" && git log -n20 --graph --decorate --pretty=oneline --abbrev-commit --all
    st = status -sb
    stat = status -sb

